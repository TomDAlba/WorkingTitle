<div id="top" class="wrap clearfix four columns ">
  <div id="main-content" class="container clearfix">
    <div class="row">
	    <div class="twelve columns">
	      
        	<h2>
        	  Fill in the form to confirm your application. An admin will get in touch with you and help with the configuration of your Simvla blog.
        	</h2>
          <div>

<%= form_for @user, :url => join_create_path, :method =>:post do |f| %>
  <%= hidden_field_tag "from", "join" %>
  <div class="twelve columns">
    <%= f.label :first_name, "First Name" %>
    <%= f.text_field :first_name, :class => "pane_input"%>
  </div>
  <div class="twelve columns">
    <%= f.label :last_name, "Last Name" %>
    <%= f.text_field :last_name, :class => "pane_input"%>        
  </div>
  <div class="twelve columns">
    <%= f.label :email, "Your Email" %>
    <%= f.text_field :email, :class => "pane_input"%>
  </div>
  <div class="twelve columns">
    <%= f.label :skill, "Your Profession" %>
    <%= f.text_field :skill, :class => "pane_input"%>
  </div>
  <div class="twelve columns">
    <%= f.label :password, "Your Password (Min. 8 Char)" %>
    <%= f.password_field :password, :class => "pane_input"%>
  </div>
  <div class="twelve columns">
    <%= f.label :password_confirmation, "Confirm Password" %>
    <%= f.password_field :password_confirmation, :class => "pane_input"%>
  </div>
  <div class="twelve columns">
    <%= f.label :username, "Your username" %>
    <%= f.text_field :username, :class => "pane_input"%>
  </div>
  <div class="twelve columns">
    <%= f.label :color, "Your Network Color (#HEX format - No Black)" %>
    <%= f.text_field :color, :class => "pane_input"%>
  </div>
  <div class="twelve columns">
    <%= f.label :bio, "Your Bio â€“ Max 80 Char." %>
    <%= f.text_field :bio, :class => "pane_input"%>
  </div>
  <div class="twelve columns">
    <%= f.label :analytics, "Link to the icon of your choice on thenounproject.com" %>
    <%= f.text_field :analytics, :class => "pane_input"%>
  </div>
  
  </div>
  <div class="twelve columns">
     <p>
       <%= f.submit "send application", :class => "nice radius large white button" %>
    </p>
  </div>							
<% end %>

      </div>
    </div>
  </div>
</div>
    
